Class {
	#name : #AllyCard,
	#superclass : #Card,
	#instVars : [
		'game',
		'spaceshipId'
	],
	#category : #'IngSoft2-Model'
}

{ #category : #comparing }
AllyCard >> = aCard [

	| compareResult |
	compareResult := self class == aCard class.
	compareResult ifTrue: [ ^ spaceshipAffected = aCard ally ].
	^ compareResult
]

{ #category : #effect }
AllyCard >> activateEffectOn: aGame forSpaceship: anId [

	game := aGame.
	spaceshipId := anId.
	aGame activateCard: self.
	aGame ally: anId with: spaceshipAffected
]

{ #category : #ally }
AllyCard >> ally [

	^ spaceshipAffected 
]

{ #category : #action }
AllyCard >> deactivate [

	game stopAlly: spaceshipId
]
